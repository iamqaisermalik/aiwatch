{
  "manifest_version": 3,
  "name": "AIWatch - Universal Web Assistant",
  "version": "1.0.0",
  "description": "AI-powered contextual web assistant that helps you navigate and understand any website",
  
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AIWatch Assistant"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content.css", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}